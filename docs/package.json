{
  "name": "mtn-coverage-map",
  "version": "1.0.0",
  "description": "MTN Business Coverage Map Implementation with Google Maps and WMS Layers",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=8080 --host=localhost",
    "build": "npm run minify-html && npm run minify-css && npm run minify-js",
    "minify-html": "html-minifier index.html -o dist/index.html --collapse-whitespace --remove-comments",
    "minify-css": "cleancss -o dist/css/styles.min.css css/styles.css",
    "minify-js": "uglifyjs js/app.js -o dist/js/app.min.js -c -m",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run watch-css\" \"npm run watch-js\" \"npm start\"",
    "watch-css": "nodemon -e css --watch css --exec \"npm run build-css\"",
    "watch-js": "nodemon -e js --watch js --exec \"npm run build-js\"",
    "build-css": "postcss css/styles.css -o dist/css/styles.css",
    "build-js": "babel js --out-dir dist/js"
  },
  "keywords": [
    "maps",
    "google-maps",
    "wms",
    "geoserver",
    "coverage-map",
    "mtn",
    "gis",
    "web-mapping"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "concurrently": "^7.6.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.2",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "uglify-js": "^3.17.4",
    "@babel/core": "^7.23.0",
    "@babel/cli": "^7.23.0",
    "@babel/preset-env": "^7.23.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
